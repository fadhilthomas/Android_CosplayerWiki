<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:contentPadding="5dp"
    card_view:cardMaxElevation="5dp"
    android:layout_marginTop="1dp"
    android:layout_marginStart="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginEnd="1dp"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivCosplayPhoto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvCosplayNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ivCosplayPhoto"
            android:text="Nickname : real_yami"
            android:textSize="16sp"
            android:textColor="@color/colorHitam"/>

        <TextView
            android:id="@+id/tvCosplayCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCosplayNickname"
            android:text="Country : Indonesia"
            android:textColor="@color/colorInfo"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_below="@id/tvCosplayCountry"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btCosplayFavorite"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/favorite"
                android:textSize="14sp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                />

            <Button
                android:id="@+id/btCosplayShare"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/share"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                />

        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>